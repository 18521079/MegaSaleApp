<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appbanhang">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.DetailProductActivity"></activity>
        <activity android:name=".activity.CartActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.NewProductActivity" />
        <activity android:name=".activity.WatchActivity" />
        <activity android:name=".activity.AccessoriesActivity" />
        <activity android:name=".activity.TabletActivity" />
        <activity android:name=".activity.LaptopActivity" />
        <activity android:name=".activity.PhoneActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>